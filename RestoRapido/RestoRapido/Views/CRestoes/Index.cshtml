@model IEnumerable<RestoRapido.Models.CResto>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Recherche par noms: @Html.TextBox("searchString")
        <input type="submit" value="Rechercher" />
    </p>
}

<table class="table">
    <tr>
        <th>
            <!-- va trier par nom lorsque l'on clique sur le lien -->
            @Html.ActionLink("Nom", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.resPostal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.resRue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.resNoCiv)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.resNom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.resPostal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.resRue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.resNoCiv)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CRestoID }) |
            @Html.ActionLink("Details", "Details", new { id=item.CRestoID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CRestoID })
        </td>
    </tr>
}

</table>
