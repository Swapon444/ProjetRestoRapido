@model IEnumerable<RestoRapido.Models.CResto>

<h2>Les Restaurants</h2>

<p>
    @Html.ActionLink("Créer un restaurant", "Create")
</p>
@*Rajouter une champ de recherche de nom*@
@using (Html.BeginForm())
{
    <p>
        Trouver par nom : @Html.TextBox("SearchString")
        <input type="submit" value="Rechercher" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Nom", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.resNoCiv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.resRue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.resPostal)
        </th>
        
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.resNom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.resNoCiv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.resRue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.resPostal)
        </td>
        
        
        <td>
            @Html.ActionLink("Modifier", "Edit", new { id=item.CRestoID }) |
            @Html.ActionLink("Détails", "Details", new { id=item.CRestoID }) |
            @Html.ActionLink("Supprimer", "Delete", new { id=item.CRestoID })
        </td>
    </tr>
}

</table>
