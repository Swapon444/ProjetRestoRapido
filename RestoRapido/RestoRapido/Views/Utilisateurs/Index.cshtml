        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.UtilisateurNom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UtilisateurPrenom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UtilisateurType)
        </td>
        <td>
            @Html.ActionLink("Modifier", "Edit", new { id=item.UtilisateurID }) |
            @Html.ActionLink("Détails", "Details", new { id=item.UtilisateurID }) |
